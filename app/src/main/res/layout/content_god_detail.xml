<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.com.lucassantanna.randomgod.GodDetailActivity"
    tools:showIn="@layout/activity_god_detail">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="460dp"
        android:id="@+id/imvGodPicture"
        android:src="@mipmap/flying_spaghetti_monster"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name:"
        android:id="@+id/txvGodNameTitle"
        android:layout_below="@+id/imvGodPicture"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Flying Spaghetti Monster"
        android:layout_marginLeft="5dp"
        android:id="@+id/txvGodName"
        android:layout_below="@+id/imvGodPicture"
        android:layout_toRightOf="@+id/txvGodNameTitle"
        android:layout_toEndOf="@+id/txvGodNameTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Religion:"
        android:id="@+id/txvReligionNameTitle"
        android:layout_below="@+id/txvGodNameTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Pastafarianism"
        android:layout_marginLeft="5dp"
        android:id="@+id/txvReligionName"
        android:layout_below="@+id/txvGodName"
        android:layout_toRightOf="@+id/txvReligionNameTitle"
        android:layout_toEndOf="@+id/txvReligionNameTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Origin:"
        android:id="@+id/txvOriginTitle"
        android:layout_below="@+id/txvReligionNameTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="United States of America"
        android:layout_marginLeft="5dp"
        android:id="@+id/txvOrigin"
        android:layout_below="@+id/txvReligionName"
        android:layout_toRightOf="@+id/txvGodNameTitle"
        android:layout_toEndOf="@+id/txvGodNameTitle" />

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Summary:"
        android:layout_marginLeft="5dp"
        android:id="@+id/txvSummaryTitle"
        android:layout_below="@+id/txvOriginTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="The Flying Spaghetti Monster (FSM) is the deity of the Church of the Flying Spaghetti Monster or Pastafarianism (a portmanteau of pasta and Rastafarian), a social movement that promotes a light-hearted view of religion and opposes the teaching of intelligent design and creationism in public schools. Pastafarianism is legally recognized as a religion in Poland, in The Netherlands, and in New Zealand â€“ where Pastafarian representatives have been authorized to celebrate weddings and where the first legally recognized Pastafarian wedding was performed in April 2016. In the same month in the United States, a Federal Judge ruled that the 'Church of the Flying Spaghetti Monster' is not a real religion"
        android:layout_marginLeft="15dp"
        android:id="@+id/txvSummary"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txvOriginTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>